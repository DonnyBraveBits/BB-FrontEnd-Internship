
<div class="product ">
  <div class="grid wide1 container__large">
    <div class="form-title title-product">
      <h2 class="heading">
        {{ section.settings.heading }}
      </h2>
      <p class="form-text title-product--text colors-text-secondary">
        {{ section.settings.subheading }}
      </p>
    </div>

    <div class="row">
      {% for block in section.blocks %}
        <div class="col l-4 m-12 c-12 mb-20 ">
            <div class="service-box product-box">
              {% if block.settings.options_icon == 'icon1' %}
                {% render 'icon-water' %}
              {% elsif block.settings.options_icon == 'icon2' %}
                {% render 'icon-diamond' %}
              {% else %}
                {% render 'icon-candle-heart' %}
              {% endif %}

              <h3 class="product-title">
                {{ block.settings.title }}
              </h3>
              <p class="service-descript colors-text-secondary">
                {{ block.settings.descript }}
              </p>
                
            </div>
        </div>
      {% endfor %}
        
    </div>

  </div>


</div>

